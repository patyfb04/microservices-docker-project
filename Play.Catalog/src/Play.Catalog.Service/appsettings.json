{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServiceSettings": {
    "ServiceName": "Catalog",
    "Authority": "https://localhost:7076" // identity server URL
  },
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": 27017
  },
  "RabbitMQSettings": {
    "Host": "localhost"
  },
  "MassTransitSettings": {
    "Retries": 5,
    "TimeIntervalInSeconds": 5
  },
  "Jwt": {
    "Authority": "https://localhost:7076",
    "Audience": "catalog"
  }
}

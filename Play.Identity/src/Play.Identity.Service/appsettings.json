{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServiceSettings": {
    "ServiceName": "Identity"
  },
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": 27017
  },
  "IdentitySettings": {
    "AdminUserEmail": "admin@play.com",
    "StartingGil": 100
  },
  "IdentityServerSettings": {
    "Clients": [
      {
        "ClientId": "frontend",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true,
        "RedirectUris": [
          "http://localhost:3000/authentication/login-callback"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "catalog.fullaccess",
          "inventory.fullaccess",
          "trading.fullaccess",
          "IdentityServerApi",
          "roles"
        ],
        "AlwaysIncludeUserClaimsInIdToken": true,
        "PostLogoutRedirectUris": [
          "http://localhost:3000/authentication/logout",
          "http://localhost:3000/authentication/logout-callback"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:3000"
        ]
      },
      {
        "ClientId": "postman",
        "ClientName": "Postman Client",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequirePkce": true,
        "RedirectUris": [
          "urn:ietf:wg:oauth:2.0:oob",
          "https://oauth.pstmn.io/v1/callback"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "catalog.fullaccess",
          "inventory.fullaccess",
          "trading.fullaccess"
        ],
        "AllowAccessTokensViaBrowser": true,
        "RequireClientSecret": false
      }
    ],
    "ApiScopes": [
      {
        "Name": "catalog.fullaccess",
        "DisplayName": "Full access to Catalog API"
      },
      {
        "Name": "catalog.readaccess",
        "DisplayName": "Read access to Catalog API"
      },
      {
        "Name": "catalog.writeaccess",
        "DisplayName": "Write access to Catalog API"
      },
      {
        "Name": "inventory.fullaccess",
        "DisplayName": "Full access to Inventory API"
      },
      {
        "Name": "inventory.readaccess",
        "DisplayName": "Read access to Inventory API"
      },
      {
        "Name": "inventory.writeaccess",
        "DisplayName": "Write access to Inventory API"
      },
      {
        "Name": "trading.fullaccess",
        "DisplayName": "Full access to Trading API"
      },
      {
        "Name": "trading.readaccess",
        "DisplayName": "Read access to Trading API"
      },
      {
        "Name": "trading.writeaccess",
        "DisplayName": "Write access to Trading API"
      }
    ],
    "ApiResources": [
      {
        "Name": "Catalog",
        "Scopes": [
          "catalog.fullaccess",
          "catalog.readaccess",
          "catalog.writeaccess"
        ],
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "Inventory",
        "Scopes": [
          "inventory.fullaccess",
          "inventory.readaccess",
          "inventory.writeaccess"
        ],
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "Trading",
        "Scopes": [
          "trading.fullaccess",
          "trading.readaccess",
          "trading.writeaccess"
        ],
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "IdentityApi",
        "Scopes": [
          "IdentityServerApi"
        ],
        "UserClaims": [
          "role"
        ]
      }
    ],
    "IdentityResources": [
      {
        "Name": "openid"
      },
      {
        "Name": "profile"
      }
    ]
  },
  "ConnectionStrings": {
    "ApplicationDbContextConnection": "Server=(localdb)\\mssqllocaldb;Database=Play.Identity.Service;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}